<h1>タスク一覧</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>ステータス</th>
        <th>作成者</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
          <td><%= task.user.name %></td>
          <td><%= myedit(task) %></td>
          <td><%= mydelete(task) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to '新規メッセージの投稿', new_task_path, class: "btn btn-primary" %>