    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タイトル</th>
          <th>ステータス</th>
          <th>作成者</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
            <td><%= @user.name %></td>
            <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-primary' %></td>
            <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
   </table>